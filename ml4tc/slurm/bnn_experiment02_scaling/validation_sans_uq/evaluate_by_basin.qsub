module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_standalone/ml4tc"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_models/bnn_experiment02_scaling"

# set KL_SCALING_FACTORS=("0.000000003162" "0.000000010000" "0.000000031623" "0.000000100000" "0.000000316228" "0.000001000000" "0.000003162278" "0.000000003162" "0.000000010000" "0.000000031623" "0.000000100000" "0.000000316228" "0.000001000000" "0.000003162278" "0.000000003162" "0.000000010000" "0.000000031623" "0.000000100000" "0.000000316228" "0.000001000000" "0.000003162278" "0.000000003162" "0.000000010000" "0.000000031623" "0.000000100000" "0.000000316228" "0.000001000000" "0.000003162278" "0.000000003162" "0.000000010000" "0.000000031623" "0.000000100000" "0.000000316228" "0.000001000000" "0.000003162278" "0.000000003162" "0.000000010000" "0.000000031623" "0.000000100000" "0.000000316228" "0.000001000000" "0.000003162278")
# set LAYER_TYPE_ABBREVS=("point-point-flipout" "point-point-flipout" "point-point-flipout" "point-point-flipout" "point-point-flipout" "point-point-flipout" "point-point-flipout" "point-point-reparam" "point-point-reparam" "point-point-reparam" "point-point-reparam" "point-point-reparam" "point-point-reparam" "point-point-reparam" "point-flipout-flipout" "point-flipout-flipout" "point-flipout-flipout" "point-flipout-flipout" "point-flipout-flipout" "point-flipout-flipout" "point-flipout-flipout" "point-reparam-reparam" "point-reparam-reparam" "point-reparam-reparam" "point-reparam-reparam" "point-reparam-reparam" "point-reparam-reparam" "point-reparam-reparam" "flipout-flipout-flipout" "flipout-flipout-flipout" "flipout-flipout-flipout" "flipout-flipout-flipout" "flipout-flipout-flipout" "flipout-flipout-flipout" "flipout-flipout-flipout" "reparam-reparam-reparam" "reparam-reparam-reparam" "reparam-reparam-reparam" "reparam-reparam-reparam" "reparam-reparam-reparam" "reparam-reparam-reparam" "reparam-reparam-reparam")

set model_dir_name="${TOP_MODEL_DIR_NAME}/layer-types=${LAYER_TYPE_ABBREVS[$SLURM_ARRAY_TASK_ID]}_kl-scaling-factor=${KL_SCALING_FACTORS[$SLURM_ARRAY_TASK_ID]}"
set prediction_dir_name="${model_dir_name}/validation"

set BASIN_ID_STRINGS=("AL" "SL" "EP" "CP" "WP" "IO" "SH")
set i=1

while ($i <= ${#BASIN_ID_STRINGS})
    set this_input_file_name="${prediction_dir_name}/predictions_basin-id-string=${BASIN_ID_STRINGS[$i]}.nc"
    
    if (-e "$this_input_file_name") then
        set this_output_file_name="${prediction_dir_name}/evaluation_basin-id-string=${BASIN_ID_STRINGS[$i]}.nc"

        python3 -u "${CODE_DIR_NAME}/evaluate_model.py" \
        --input_prediction_file_name="${this_input_file_name}" \
        --event_freq_in_training=0.07267640234 \
        --num_prob_thresholds=1001 \
        --num_reliability_bins=20 \
        --num_bootstrap_reps=1 \
        --output_eval_file_name="${this_output_file_name}"
    endif
    
    @ i = $i + 1
end
