#!/bin/tcsh

#SBATCH --job-name="plot_eval_by_month_and_basin"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=01:00:00
#SBATCH --array=1
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_eval_by_month_and_basin_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_standalone/ml4tc"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_models/experiment11_reduced_preds"

set CHANNEL_COUNT_STRINGS=("004-004-008-008-012-012-016-016-024-024")
set LAG_TIME_STRINGS_MINUTES=("0-30-60-90-120-150-180-210-240-270-300")

set channel_count_string=${CHANNEL_COUNT_STRINGS[$SLURM_ARRAY_TASK_ID]}
set lag_time_string_minutes=${LAG_TIME_STRINGS_MINUTES[$SLURM_ARRAY_TASK_ID]}

set model_dir_name="${TOP_MODEL_DIR_NAME}/channels=${channel_count_string}_lag-times-minutes=${lag_time_string_minutes}"
set input_dir_name="${model_dir_name}/validation_2005-2009"
set output_dir_name="${input_dir_name}/eval_by_month_and_basin"

python3 -u "${CODE_DIR_NAME}/plot_eval_by_month_and_basin.py" \
--input_evaluation_dir_name="${input_dir_name}" \
--input_total_validn_eval_file_name="${input_dir_name}/evaluation.nc" \
--confidence_level=0.95 \
--output_dir_name="${output_dir_name}"
