#!/bin/tcsh

#SBATCH --job-name="ri2023_plot_case_studies"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="gpu"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=01:00:00
#SBATCH --array=1-5
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=ri2023_plot_case_studies_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_standalone/ml4tc"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_models/ri_paper_2023_experiment/multimodel_ensembles"
set NORM_EXAMPLE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_project/learning_examples/with_real_time_ships/rotated_with_storm_motion/imputed/normalized"
set NORMALIZATION_FILE_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_project/learning_examples/rotated_with_storm_motion/normalization_params_1993-2004_2015-2019.nc"
set SHIPS_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_project/ships_data/real_time/processed"

set CIRA_IR_LAG_TIME_COUNTS=(   "0" "1" "1")
set USE_SHIPS_ENVIRO_FLAGS=(    "1" "0" "1")
set USE_SHIPS_HISTORICAL_FLAGS=("1" "0" "1")
set USE_SHIPS_SATELLITE_FLAGS=( "1" "0" "1")
set USE_TEMPORAL_DIFF_FLAGS=(   "0" "0" "0")
set DROPOUT_RATES=(             "0.8" "0.7" "0.8")

set i=1
set model_dir_names_string=""

while ($i <= ${#CIRA_IR_LAG_TIME_COUNTS})
    set num_cira_ir_lag_times=${CIRA_IR_LAG_TIME_COUNTS[$i]}
    set use_ships_enviro=${USE_SHIPS_ENVIRO_FLAGS[$i]}
    set use_ships_historical=${USE_SHIPS_HISTORICAL_FLAGS[$i]}
    set use_ships_satellite=${USE_SHIPS_SATELLITE_FLAGS[$i]}
    set use_temporal_diffs=${USE_TEMPORAL_DIFF_FLAGS[$i]}
    set dropout_rate=${DROPOUT_RATES[$i]}

    set model_dir_names_string="${model_dir_names_string} ${TOP_MODEL_DIR_NAME}/num-cira-ir-lag-times=${num_cira_ir_lag_times}_use-ships-enviro=${use_ships_enviro}_use-ships-historical=${use_ships_historical}_use-ships-satellite=${use_ships_satellite}_use-temporal-diffs=${use_temporal_diffs}_dense-dropout-rate=${dropout_rate}/full_ensemble"
    
    @ i = $i + 1
end

set CYCLONE_ID_STRINGS=("2020AL13" "2020AL31" "2020AL28" "2021EP17" "2020EP19")
set INIT_TIME_STRINGS=("2020-08-25-06" "2020-11-15-06" "2020-10-28-06" "2021-10-23-06" "2020-10-15-00")

set cyclone_id_string=${CYCLONE_ID_STRINGS[$SLURM_ARRAY_TASK_ID]}
set init_time_string=${INIT_TIME_STRINGS[$SLURM_ARRAY_TASK_ID]}
set output_dir_name="${TOP_MODEL_DIR_NAME}/real_time_testing/isotonic_regression/case_studies/${cyclone_id_string}_${init_time_string}"

python3 -u "${CODE_DIR_NAME}/ri2023_plot_case_study.py" \
--input_nn_model_dir_names ${model_dir_names_string} \
--nn_model_description_strings "NN_without_CIRA_IR" "NN_without_SHIPS" "NN_with_everything" \
--input_norm_example_dir_name="${NORM_EXAMPLE_DIR_NAME}" \
--input_normalization_file_name="${NORMALIZATION_FILE_NAME}" \
--input_ships_dir_name="${SHIPS_DIR_NAME}" \
--cyclone_id_string="${cyclone_id_string}" \
--init_time_string="${init_time_string}" \
--output_dir_name="${output_dir_name}"
