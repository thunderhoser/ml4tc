#!/bin/tcsh

#SBATCH --job-name="plot_gridded_eval_validation"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=01:00:00
#SBATCH --array=1
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_gridded_eval_validation_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_standalone/ml4tc"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4tc_models/experiment09_reduced_preds"

set MAX_TRANSLATIONS_PX=(6)
set MAX_ROTATIONS_DEG=(50)
set NOISE_STANDARD_DEVIATIONS=(0.5)

set max_translation_px=${MAX_TRANSLATIONS_PX[$SLURM_ARRAY_TASK_ID]}
set max_rotation_deg=${MAX_ROTATIONS_DEG[$SLURM_ARRAY_TASK_ID]}
set noise_stdev=${NOISE_STANDARD_DEVIATIONS[$SLURM_ARRAY_TASK_ID]}

set max_translation_string=`printf "%02d" $max_translation_px`
set max_rotation_string=`printf "%02d" $max_rotation_deg`
set noise_stdev_string=`printf "%.1f" $noise_stdev`

set model_dir_name="${TOP_MODEL_DIR_NAME}/max-translation-px=${max_translation_string}_max-rotation-deg=${max_rotation_string}_noise-stdev=${noise_stdev_string}"
set evaluation_dir_name="${model_dir_name}/validation_2005-2009"
set output_dir_name="${evaluation_dir_name}/gridded_evaluation"

python3 -u "${CODE_DIR_NAME}/plot_gridded_evaluation.py" \
--input_evaluation_dir_name="${evaluation_dir_name}" \
--input_grid_metafile_name="${evaluation_dir_name}/grid_metadata.nc" \
--input_total_validn_eval_file_name="${evaluation_dir_name}/evaluation.nc" \
--output_dir_name="${output_dir_name}"
